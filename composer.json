{
  "name": "event-engine/php-engine",
  "description": "CQRS / ES PHP SDK for event-engine.io",
  "homepage": "https://event-engine.io/",
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Miertsch",
      "email": "contact@prooph.de",
      "homepage": "http://www.prooph.de"
    },
    {
      "name": "Sandro Keil",
      "email": "contact@prooph.de",
      "homepage": "http://prooph-software.com/"
    }
  ],
  "require": {
    "php": "^7.2",
    "roave/security-advisories": "dev-master",
    "ramsey/uuid" : "^3.6",
    "psr/container": "^1.0",
    "psr/http-message": "^1.0",
    "fig/http-message-util": "^1.1",
    "codeliner/array-reader": "^2.0",
    "psr/http-server-middleware": "^1.0",
    "psr/log": "^1.1"
  },
  "require-dev": {
    "justinrainbow/json-schema": "^5.2",
    "prooph/event-store": "^7.0",
    "phpunit/phpunit": "^7.0",
    "bookdown/bookdown": "1.x-dev",
    "webuni/commonmark-table-extension": "^0.6.1",
    "webuni/commonmark-attributes-extension": "^0.5.0",
    "prooph/php-cs-fixer-config": "^0.3",
    "satooshi/php-coveralls": "^1.0",
    "malukenho/docheader": "^0.1.4",
    "opis/json-schema": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "EventEngine\\": "src/",
      "EventEngine\\Schema\\": "schema/src/",
      "EventEngine\\JsonSchema\\": "json-schema/src/",
      "EventEngine\\Data\\": "data/src/",
      "EventEngine\\Messaging\\": "messaging/src/",
      "EventEngine\\Util\\": "utils/src/",
      "EventEngine\\Logger\\": "logger/src/",
      "EventEngine\\Persistence\\": "persistence/src/",
      "EventEngine\\DocumentStore\\": "document-store/src/",
      "EventEngine\\EventStore\\": "event-store/src/",
      "EventEngine\\Prooph\\V7\\EventStore\\": "prooph-v7-event-store/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "EventEngineTest\\": "tests/",
      "EventEngineExample\\": "examples"
    }
  },
  "prefer-stable": true,
  "scripts": {
    "check": [
      "@cs",
      "@docheader",
      "@test"
    ],
    "docheader": "vendor/bin/docheader check examples/ src/ tests/",
    "cs": "php-cs-fixer fix -v --diff --dry-run",
    "cs-fix": "php-cs-fixer fix -v --diff",
    "test": "vendor/bin/phpunit"
  }
}
